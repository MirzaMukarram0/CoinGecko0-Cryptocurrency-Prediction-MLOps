[flake8]
# Maximum line length
max-line-length = 120

# Maximum complexity
max-complexity = 10

# Exclude directories
exclude = 
    .git,
    __pycache__,
    .env,
    venv,
    .venv,
    build,
    dist,
    *.egg-info,
    airflow/logs,
    data/,
    .github/

# Ignore specific errors
ignore = 
    # E501: line too long (handled separately)
    # W503: line break before binary operator (conflicts with black)
    W503,
    # E203: whitespace before ':' (conflicts with black)
    E203,
    # E266: too many leading '#' for block comment
    E266,
    # E402: module level import not at top of file
    E402

# Per-file ignores
per-file-ignores =
    # __init__.py files can have unused imports
    __init__.py:F401
    # Test files can have long lines and assertions
    test_*.py:E501,S101
    # DAG files may have special requirements
    *_dag.py:E501

# Select only certain error codes (optional - comment out to check all)
# select = E,F,W,C90

# Statistics
statistics = True
show-source = True
count = True
